<!DOCTYPE html>
<html>
  <head>
    <title>Kadaifb</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
    <div id = "title">JAKE BOOK</div>
      <section id ="menu">
        <% if logged_in? %>
          <%= link_to "Profile", user_path(current_user.id),class: 'btn btn-success' %>
          <%= link_to "Logout", session_path(current_user.id), method: :delete,class: 'btn btn-success' %>
        <% else %>
          <%= link_to "Sign up", new_user_path, class: 'btn btn-success' %>
          <%= link_to "Login", new_session_path, class: 'btn btn-success' %>
        <% end %>
      </section>
      <section id = "notice">
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      </section>
    </header>
      <%= yield %>
  </body>
</html>
