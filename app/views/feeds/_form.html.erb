<section id = "registration">
  <%= form_with(model: @feed, local: true) do |form| %>
    <% if @feed.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@feed.errors.count, "error") %> prohibited this feed from being saved:</h2>
        <ul>
        <% @feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <%= form_with(model: @feed, local: true, url: choose_new_or_edit) do |form| %>
    <div class="field">
      <%= form.label :image %>
      <%= image_tag(@feed.image.url) if @feed.image && @feed.image.url %>
      <%= form.file_field :image %>
      <%= form.hidden_field :image_cache %>
      <%= @feed.content if @feed.content%>
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <div class="actions">
      <%= form.submit "登録する",class: 'btn btn-success' %>
    </div>
  <% end %>
</section>
