<section id = "newrecord">
  <%= image_tag @feed.image.url if @feed.image.url %>
  <%= "コメント:"%><%= @feed.content if @feed.content%>
</section>

<section id = "button">
  <% if @feed.user_id == current_user.id %>
    <br>
    <%= link_to 'Edit', edit_feed_path(@feed), class: "btn btn-info" %>
    <%= link_to 'Destroy',@feed, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-info" %>
  <% end %>
    <%= link_to 'Back', feeds_path , class: "btn btn-info"%>
</section>
